<launch>
  <arg name="map_file" default="$(find environment)/maps/navi_tester.yaml"/>
  <arg name="amcl_map_file" default="$(find environment)/maps/navi_tester.yaml"/>
  
  <arg name="world_name" default="$(find environment)/worlds/navi_tester.world"/>
  <arg name="shift_x" default="-3.0"/>
  <arg name="shift_y" default="-11.75"/>
  <arg name="gui" default="false"/>

  <!-- Environment TF -->
  <!-- <node pkg="environment" name="static_broadcaster" type="static_broadcaster"></node> -->
  
  <!-- Robot Parameters-->
  <!-- robot config -->
  <rosparam file="$(find launcher)/param/nav_params.yaml" ns="move_base" />
  <!-- AMCL init pose -->
  <rosparam file="$(find launcher)/param/amcl_init.yaml" ns="amcl"/>
  
  <!-- Gazebo-->
  <include file="$(find ghost)/launch/helloworld.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="shift_x" value="$(arg shift_x)"/>
    <arg name="shift_y" value="$(arg shift_y)"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>>

  <!-- Robot -->
  <include file="$(find ghost)/launch/boot.launch">
    <arg name="sim" value="true"/>
    <arg name="tf" value="false"/>
    <arg name="navigation" value="true"/>
    <arg name="agv" value="false"/>
    
    <arg name="map_file" value="$(arg map_file)"/>
    <arg name="amcl_map_file" value="$(arg amcl_map_file)"/>
    <arg name="keyboard" value="false"/>
    <arg name="joystick" value="false"/>
    <arg name="joint_pub" value="false"/>
  </include>
  
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="config" default="true" />
  <arg unless="$(arg config)" name="command_args" value="" />
  <arg     if="$(arg config)" name="command_args" value="-d $(find launcher)/launch/rv.rviz" />
  
  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)" pkg="rviz" type="rviz" respawn="false"
	args="$(arg command_args)" output="screen">
  </node>
</launch>
