<launch>
  <arg name="shift_x" default="0.0"/>
  <arg name="shift_y" default="0.0"/>
  <arg name="shift_z" default="0.0"/>

  <include file="$(find ghost)/launch/boot.launch">
    <arg name="sim" value="true"/>
    <arg name="tf" value="true"/>
    <arg name="navigation" value="false"/>
    <arg name="agv" value="false"/>
    
    <arg name="keyboard" value="false"/>
    <arg name="joystick" value="false"/>
    <arg name="joint_pub" value="false"/>
    <arg name="shift_x" value="$(arg shift_x)"/>
    <arg name="shift_y" value="$(arg shift_y)"/>
    <arg name="shift_z" value="$(arg shift_z)"/>
  </include>
</launch>
