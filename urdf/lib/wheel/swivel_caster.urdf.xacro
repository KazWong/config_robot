<?xml version="1.0"?>
<robot name="swivel_caster" xmlns:xacro="http://ros.org/wiki/xacro">
	<xacro:macro name="swivel_caster" params="name parent xyz:='0 0 0' rpy:='0 0 0' damping:=1000000.0">
		<xacro:property name="radius" value="0.07825"/>	
		<xacro:property name="rho" value="1046.3516"/>	
		
		<joint name="${name}_joint" type="continuous">
			<axis xyz="0 0 1" />
			<origin xyz="${xyz}" rpy="${rpy}" />
			<parent link="${parent}" />
			<child link="${name}" />
			<dynamics damping="${damping}" friction="0.0" />
		</joint>

		<link name="${name}">
			<xacro:inertia_sphere rho="${rho}" radius="${radius}" />
			<xacro:collision_sphere radius="${radius}" />
			<xacro:visual_sphere radius="${radius}" />
		</link>
	</xacro:macro>
</robot>


